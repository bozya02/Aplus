<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="False" 
             Visual="Material"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.PageLogin">
    
    <StackLayout VerticalOptions="CenterAndExpand" Spacing="100">
        <Image Source="logo.png" Aspect="AspectFit"/>

        <StackLayout Spacing="50">
            <Entry Placeholder="Логин"/>
            <Entry Placeholder="Пароль" IsPassword="True"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Зарегистриоваться" Clicked="btnSignUpClicked" HorizontalOptions="Start"/>
            <Button Text="Войти" Clicked="btnLoginClicked" HorizontalOptions="End"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
